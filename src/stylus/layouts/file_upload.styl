.file
  &__checkbox
    &__img
      transition all .2s ease-out
      transform-origin 50% 50%
      transform scale(0)
      &--visible
        transform scale(1)
    &__container
      margin-top 1rem
    &__wrapper
      display flex
      align-items center
      cursor pointer
    &__text
      font-size 2rem
    &__box
      height: 2rem
      width: 2rem
      background #eee
      border solid 2px rgba(#636e72, 0.5)
      border-radius .5rem
      margin-right 1rem
      img
        max-height 1.5rem
        max-width 1.5rem
  &__wrapper
    position absolute
    top 0
    left 0
    width 100vw
    min-height 100vh
    background-color #fff

  &__container
    font-size 2rem
    width auto
    font-family 'Roboto', sans-serif
    &__cta
      cta(#27ae60)

  &__proceed
    &__container
      display flex
      margin-top 1rem
      justify-content flex-end
    &__btn
      cta(ACCENT_COLOR)
      display flex
      align-items center
      max-height 5rem
      max-width 17rem

  &__preview
    margin-top 1rem
    width 100%
    padding 3rem 0
    background-color #eee
    border-radius 1rem
    text-align center
    &__grid
      display grid
      width 100%
      margin-bottom 1rem
    
    &__message
      font-size 2rem
      font-family 'Roboto', sans-serif
      font-weight bold
      color #2d3436

  &__item
    background #fff
    font-size 1.6rem
    font-family 'Roboto', sans-serif
    border-radius .5rem
    height 15rem
    width 15rem
    display flex
    flex-direction column
    align-items center
    justify-content center
    margin auto auto
    border solid rgba(#2d3436, 0.2) 2px
    transition all .5s ease-out
    cursor pointer
    position relative
    &:hover
      border solid ACCENT_COLOR 2px
    &__delete
      transition all .2s ease-out
      position absolute
      top 5%
      right 5%
      opacity 0
      &--visible
        opacity 1
      i
        color ACCENT_COLOR
    &__icon
      i
        margin-bottom .5rem
        font-size 4rem
    &__name
      font-weight bold
      margin-bottom .5rem

@keyframes slideIn
  from
    transform translateX(100%)

  to
    transform translateX(0)

@keyframes slideOut
  from
    transform translateX(0)

  to
    transform translateX(100%)

.file__back__icon
  transition all .2s ease-out