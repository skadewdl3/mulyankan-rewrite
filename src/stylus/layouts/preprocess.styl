.preprocessor
  
  &__canvases
      
    .icon
      margin 0
    display flex
    align-items center
    flex-direction column
    margin-top TOP_BAR_HEIGHT
    max-height 100vh
    overflow scroll
  &__controls
    .icon
      margin 0 1rem
    &__download
      background #27ae60!important
    height TOP_BAR_HEIGHT
    width 100%
    position fixed
    -webkit-position sticky
    top 0
    left 0
    background #fff
    z-index 4
    box-shadow 0 0 2rem rgba(GRAY, 0.1)
    display flex
    align-items center 
    justify-content space-between

.preprocess
  &__canvas
    box-shadow 0.1rem 0 0.5rem rgba(GRAY, 0.1), -0.1rem 0 0.5rem rgba(GRAY, 0.1)
    &__controls
      padding 1em 2rem
      padding-right 0
      display flex
      align-items center
      justify-content flex-end
      &__btn
        background #fff
        border-radius .5rem
        padding 1rem
        margin 0 1rem
        display flex
        align-items center
        justify-content center
        cursor pointer
        transition all .2s ease-out
        z-index 2
        &:hover
          transform translateY(-.2rem)
          box-shadow 0 0 4rem rgba(#000, 0.05)

        &:active
          transform translateY(0)
          box-shadow 0 0 0 0 rgba(0, 0, 0, 0)
        &:last-child
          margin-right 0
        i
          font-size 1.6rem