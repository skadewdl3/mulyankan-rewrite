.landing
  &__wrapper
    width 100vw
    // height 100vh
    background rgba(#fff, 0.4)
    
  &__nav
    width 100vw
    height 6rem
    list-style none
    display flex
    padding .5rem 2rem
    align-items center
    justify-content flex-end
    background transparent
    &__item
      font-size 1.8rem
      margin 0 1rem
      cursor pointer

  &__hero
    display grid
    grid-template-columns 1fr 1fr
    align-items center
    justify-content space-between
    padding 0 15rem
    height 100vh - 7rem

  &__image
    width 100%
    img
      width 100%

  &__text
    width 100%
    height 45%
    text-align center

  &__title
    &--main
      font-family 'Megrim'
      font-weight bold
      font-size 7rem
      margin 2rem 0
    font-size 2.5rem
  
  &__cta-wrapper
    margin 5rem 0

  &__cta
    cta(ACCENT_COLOR)
  
