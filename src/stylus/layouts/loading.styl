.loading
  height 100vh
  width 100vw
  position absolute
  top 0
  left 0
  background #fff
  display flex
  justify-content center
  text-align center
  z-index 5

  &__image
    width 25vw
    display inline-block

  &__sub-message
    font-size 1.8rem
    font-family 'Megrim', sans-serif
    font-weight bold
    color rgba(#2d3436, 0.5)
    margin-bottom 3rem
  &__message
    font-size 2rem
    font-family 'Roboto', sans-serif
    color #2d3436
    max-width 70%
    display inline-block

@keyframes fadeIn
  from
    transform scale(1.2)
    opacity 0
  to
    transform scale(1)
    opacity 1

@keyframes fadeOut
  from
    transform scale(1)
    opacity 1
  to
    transform scale(1.2)
    opacity 0